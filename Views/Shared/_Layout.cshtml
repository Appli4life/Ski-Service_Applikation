<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body class="bg">

    <!-- src: https://mdbootstrap.com/docs/standard/navigation/navbar/ -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">

            <a class="navbar-brand" href="#">
                <img src="~/Images/logo-small.png" alt="Logo" style="width:70px;">
            </a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">@Html.ActionLink("Angebot", "Index", "Angebot", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Warenkorb", "Index", "Warenkorb",null, new { @class = "nav-link" })</li>
                
            </ul>

            <div class="d-flex align-items-center">
                  @Html.ActionLink("Login", "Index", "Login", null, new { @class = "btn btn-success" })

            </div>

        </div>
    </nav>


    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
