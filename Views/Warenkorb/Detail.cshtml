@model Ski_Service_Applikation.angebot

@{
    ViewBag.Title = "Warenkorb";
    Layout = "~/Views/Shared/_Layout_k_in.cshtml";
}

<h2>Warenkorb</h2>

@{ 
    if (Model == null)
    {
        <h3>Warenkorb ist leer</h3>        
    }
    else
    {



<form method="post" action="/Warenkorb/Confirmation">
    @Html.AntiForgeryToken()

    <div>
        <h4>Angebot</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Preis Pro Tag
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Preis_pro_Tag)
            </dd>

            <dt>
                Kategorie
            </dt>

            <dd>
                @Html.DisplayFor(model => model.kategorie.Kategorie1)
            </dd>

            <dt>
                Marke
            </dt>

            <dd>
                @Html.DisplayFor(model => model.marke.Marke1)
            </dd>

        </dl>
    </div>

    <div class="form-group">
        Altersgruppe
        <div class="col-md-10">
            @Html.DropDownList("Altersgruppe_ID", null, htmlAttributes: new { @class = "form-input" })
        </div>
    </div>

    <div class="form-group">
        Altersgruppe
        <div class="col-md-10">
            @Html.DropDownList("Geschlecht_ID", null, htmlAttributes: new { @class = "form-input" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label for="groesse">Körpergrösse</label>
            <br />
            <input type="number" value="170" min="50" max="250" name="groesse" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label for="menge">Menge</label>
            <br />
            <input type="number" value="1" min="1" max="5" name="menge" />
        </div>
    </div>

    <div class="form-horizontal">
        <div class="form-group row">
            <div class="col-md-10">
                <label for="von">Miet Datum</label>
                <br />
                <input type="date" value='@DateTime.Now.AddDays(1).ToString("yyy-MM-dd")' min='@DateTime.Now.AddDays(1).ToString("yyy-MM-dd")' max='@DateTime.Now.AddYears(1).ToString("yyy-MM-dd")' id="von" name="Von" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10">
                <label for="bis">Rückgabe Datum</label>
                <br />
                <input type="date" value='@DateTime.Now.AddDays(2).ToString("yyy-MM-dd")' min='@DateTime.Now.AddDays(2).ToString("yyy-MM-dd")' max='@DateTime.Now.AddYears(2).ToString("yyy-MM-dd")' id="bis" name="Bis" />
            </div>
        </div>

        <div class="form-group">
            <label for="pdf">Rechnung als PDF generieren (Speicherort: Downloads)</label>
            <input type="radio" name="pdf" value="YES" checked/>
            <br>
            <br />
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Übernehmen</button>
            </div>
        </div>


    </div>

</form>
        }
    }
<p>
    @Html.ActionLink("Delete", "Delete", "Warenkorb")
    @Html.ActionLink("Back to List", "Index", "Angebot")
</p>
