@model IEnumerable<Ski_Service_Applikation.angebot>

@{
    ViewBag.Title = "Angebote";
    if (!ViewBag.log)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout_k_in.cshtml";
    }
}

<div class="container bg-dark text-white my-5 p-2">
    <h2>Angebote</h2>

    <p>
        Hier finden Sie unsere Angebote

    </p>
    <div class="container row text-dark">
        

        @foreach (var item in Model)
        {
            // Cards mit Hinzufüg Button
            <div class="card bg-light col-md-6 m-2" style="width:400px">
                <img class="card-img-top" src="~/Images/Category/@{@Html.DisplayFor(modelItem => item.kategorie.Kategorie1)}.jpg" onerror="this.src='../Images/Category/noprev.jpg';" alt="Kein Vorschaubild Vorhanden">
                <div class="card-body">
                    <h4 class="card-title">
                        @Html.DisplayFor(modelItem => item.kategorie.Kategorie1) von
                        @Html.DisplayFor(modelItem => item.marke.Marke1)
                    </h4>
                    <p class="card-text">Preis Pro Tag: @Html.DisplayFor(modelItem => item.Preis_pro_Tag) CHF</p>
                    @Html.ActionLink("Add", "Add", "Warenkorb", new { id = item.Angebot_ID }, new { @class = "add" })
                </div>
            </div>
            @*@Html.DisplayFor(modelItem => item.Preis_pro_Tag)

            @Html.DisplayFor(modelItem => item.kategorie.Kategorie1)

            @Html.DisplayFor(modelItem => item.marke.Marke1)*@

        }
    </div>
</div>
